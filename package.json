{
  "name": "city-shooter-web",
  "version": "1.0.0",
  "description": "City Shooter FPS Game built with Babylon.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,json}\"",
